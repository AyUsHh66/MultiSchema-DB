@page "{id:int}"
@model MultiSchemaDB_Project.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Delete Customer</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this customer?</h4>
            <div class="mt-3">
                @if (Model.Schema == "Schema1" && Model.Customer is MultiSchemaDB_Project.Models.Schema1Customer schema1Customer)
                {
                    <p><strong>First Name:</strong> @schema1Customer.FirstName</p>
                    <p><strong>Last Name:</strong> @schema1Customer.LastName</p>
                    <p><strong>Email:</strong> @schema1Customer.Email</p>
                }
                else if (Model.Schema == "Schema2" && Model.Customer is MultiSchemaDB_Project.Models.Schema2Customer schema2Customer)
                {
                    <p><strong>Full Name:</strong> @schema2Customer.FullName</p>
                    <p><strong>Email:</strong> @schema2Customer.Email</p>
                    <p><strong>Phone:</strong> @schema2Customer.Phone</p>
                }
                else if (Model.Schema == "Schema3" && Model.Customer is MultiSchemaDB_Project.Models.Schema3Customer schema3Customer)
                {
                    <p><strong>Company Name:</strong> @schema3Customer.CompanyName</p>
                    <p><strong>Contact Person:</strong> @schema3Customer.ContactPerson</p>
                    <p><strong>Email:</strong> @schema3Customer.Email</p>
                    <p><strong>Address:</strong> @schema3Customer.Address</p>
                }
            </div>
            <form method="post" class="mt-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="/Index" asp-route-schema="@Model.Schema" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
