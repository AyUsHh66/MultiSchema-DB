@page
@model MultiSchemaDB_Project.Pages.EditModel
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Edit Customer</h3>
        </div>
        <div class="card-body">
            <form method="post">
                @if (Model.Schema == "Schema1")
                {
                    <div class="mb-3">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" id="FirstName" name="FirstName" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema1Customer)?.FirstName)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" id="LastName" name="LastName" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema1Customer)?.LastName)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" id="Email" name="Email" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema1Customer)?.Email)" class="form-control" />
                    </div>
                }
                else if (Model.Schema == "Schema2")
                {
                    <div class="mb-3">
                        <label for="FullName" class="form-label">Full Name</label>
                        <input type="text" id="FullName" name="FullName" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema2Customer)?.FullName)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" id="Email" name="Email" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema2Customer)?.Email)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="Phone" class="form-label">Phone</label>
                        <input type="text" id="Phone" name="Phone" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema2Customer)?.Phone)" class="form-control" />
                    </div>
                }
                else if (Model.Schema == "Schema3")
                {
                    <div class="mb-3">
                        <label for="CompanyName" class="form-label">Company Name</label>
                        <input type="text" id="CompanyName" name="CompanyName" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema3Customer)?.CompanyName)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="ContactPerson" class="form-label">Contact Person</label>
                        <input type="text" id="ContactPerson" name="ContactPerson" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema3Customer)?.ContactPerson)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" id="Email" name="Email" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema3Customer)?.Email)" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" id="Address" name="Address" value="@((Model.Customer as MultiSchemaDB_Project.Models.Schema3Customer)?.Address)" class="form-control" />
                    </div>
                }
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-page="/Index" asp-route-schema="@Model.Schema" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
